{
    "name": "chronos-pomodoro",
    "version": "1.0.0",
    "description": "A beautiful macOS Pomodoro timer with Greek philosophy aesthetic and liquid glass design",
    "main": "main/index.js",
    "scripts": {
        "start": "electron .",
        "dev": "electron . --dev",
        "test": "jest --config jest.config.js",
        "test:report": "jest --config jest.config.js 2>&1; echo \"\n══════════════════════════════════════════\n  Report: test-report/index.html\n  Coverage: test-report/coverage/index.html\n══════════════════════════════════════════\"",
        "build": "electron-builder --mac",
        "build:dir": "electron-builder --mac --dir",
        "lint": "eslint . --ext .js --ignore-path .prettierignore",
        "lint:fix": "eslint . --ext .js --ignore-path .prettierignore --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check ."
    },
    "author": "",
    "license": "MIT",
    "build": {
        "appId": "com.chronos.pomodoro",
        "productName": "Chronos",
        "mac": {
            "category": "public.app-category.productivity",
            "icon": "build/icon.icns",
            "target": [
                "zip",
                "dmg"
            ],
            "darkModeSupport": true,
            "extendInfo": {
                "NSHumanReadableCopyright": "Chronos Pomodoro Timer"
            }
        },
        "dmg": {
            "title": "Chronos",
            "backgroundColor": "#1E1C18",
            "contents": [
                {
                    "x": 130,
                    "y": 220
                },
                {
                    "x": 410,
                    "y": 220,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        },
        "files": [
            "main/**/*",
            "renderer/**/*",
            "preload.js",
            "icon.png",
            "!**/*.test.*",
            "!tests/**/*",
            "!test-report/**/*",
            "!.copilot-tracking/**/*"
        ],
        "directories": {
            "output": "dist"
        }
    },
    "devDependencies": {
        "@jest/globals": "^30.2.0",
        "electron": "^33.0.0",
        "electron-builder": "^26.8.1",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.5",
        "jest": "^30.2.0",
        "jest-environment-jsdom": "^30.2.0",
        "jest-html-reporter": "^4.3.0",
        "prettier": "^3.8.1"
    },
    "dependencies": {
        "electron-store": "^8.2.0"
    }
}